<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="../dist/img/favicon_leaf.png">
  <title>BeEco - segreguj razem z nami!</title>
  <!-- @include 'styles.kit' -->
</head>

<body>

  <header class="header">

    <div class="header__mobile">

      <div class="header__mobile--top">

        <a href="#" class="header__mobile--iconWrapper">
          <i class="fa-solid fa-leaf header__mobile--iconTop"></i>
          <p class="header__mobile--title">Be<span class="header__mobile--span">Eco</span></p>
        </a>

        <button class="hamburger hamburger--stand header__mobile--hamburger" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>

        <nav class="nav__mobile">
          <p class="nav__mobile--menu">menu</p>
          <a href="" class="nav__mobile--item">segreguj</a>
          <a href="" class="nav__mobile--item">wyszukiwarka</a>
          <a href="" class="nav__mobile--item">kontakt</a>
        </nav>

      </div>

      <div class="header__mobile--bottom">
        <i class="ph ph-tree header__mobile--iconBottom"></i>
      </div>

    </div>

    <div class="header__desktop">

      <div class="header__desktop--top">

        <a href="#" class="header__desktop--iconWrapper">
          <i class="fa-solid fa-leaf header__desktop--iconTop"></i>
          <p class="header__desktop--title">Be<span class="header__desktop--span">Eco</span></p>
        </a>

        <nav class="nav__desktop">
          <a href="" class="nav__desktop--item">segreguj</a>
          <a href="" class="nav__desktop--item">wyszukiwarka</a>
          <a href="" class="nav__desktop--item">kontakt</a>
        </nav>

      </div>

      <div class="header__desktop--bottom">
        <div class="header__desktop--shadow"></div>
        <div class="header__desktop--image">
          <div class="header__desktop--titleWrapper">
            <h1 class="header__desktop--titleBottom"><span class="header__desktop--spanBottom">Daj </span><span
                class="header__desktop--spanBottom">przykład</span></h1>
            <h1 class="header__desktop--titleBottom"><span class="header__desktop--spanBottom">Segreguj</span>
              <span class="header__desktop--spanBottom">odpady</span>
            </h1>
          </div>

        </div>
      </div>

      <!-- <div class="header__desktop--bottom">
        <video autoplay loop>
          <source src="../dist/video/header_video_small.mp4">
        </video>>
      </div> -->

    </div>

  </header>

  <section class="segregate" id="segregate">

    <div class="segregate__mobile">

      <div class="segregate__mobile--top">

        <div class="segregate__mobile--iconWrapper">
          <i class="fa-solid fa-bottle-water segregate__mobile--icon"></i>
        </div>

        <div class="segregate__mobile--iconWrapper">
          <i class="fa-regular fa-newspaper segregate__mobile--icon"></i>
        </div>

        <div class="segregate__mobile--iconWrapper">
          <i class="fa-solid fa-wine-glass-empty segregate__mobile--icon"></i>
        </div>

        <div class="segregate__mobile--iconWrapper">
          <i class="fa-solid fa-seedling segregate__mobile--icon"></i>
        </div>

        <div class="segregate__mobile--iconWrapper">
          <i class="fa-solid fa-recycle segregate__mobile--icon"></i>
        </div>

      </div>

      <div class="segregate__mobile--bottom">

        <div class="segregate__mobile--table">
          <div class="segregate__mobile--front hide-front">
            <i class="fa-regular fa-circle-check segregate__mobile--tableIcon"></i>
          </div>
          <div class="segregate__mobile--back show-back">
            <ul class="segregate__mobile--yesList"></ul>
          </div>
        </div>

        <div class="segregate__mobile--table">
          <div class="segregate__mobile--front">
            <i class="fa-solid fa-ban segregate__mobile--tableIcon"></i>
          </div>
          <div class="segregate__mobile--back">
            <ul class="segregate__mobile--noList"></ul>
          </div>
        </div>

      </div>

    </div>

    <div class="segregate__desktop">

      <div class="segregate__desktop--item">
        <div class="segregate__desktop--shadow"></div>
        <h3 class="segregate__desktop--title">plastik</h3>
      </div>

      <div class="segregate__desktop--item">
        <div class="segregate__desktop--shadow"></div>
        <h3 class="segregate__desktop--title">papier</h3>
      </div>

      <div class="segregate__desktop--item">
        <div class="segregate__desktop--shadow"></div>
        <h3 class="segregate__desktop--title">szkło</h3>
      </div>

      <div class="segregate__desktop--item">
        <div class="segregate__desktop--shadow"></div>
        <h3 class="segregate__desktop--title">bio</h3>
      </div>

      <div class="segregate__desktop--item">
        <div class="segregate__desktop--shadow"></div>
        <h3 class="segregate__desktop--title">zmieszane</h3>
      </div>


    </div>


  </section>


  <script src="../dist/js/script.min.js"></script>
</body>

</html>